<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        {{! Bootstrap CDN }}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        {{! jQuery CDN }}
        <script
            src="https://code.jquery.com/jquery-3.6.1.js"
            integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
            crossorigin="anonymous"
        ></script>

        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/table.css" />
        <link rel="stylesheet" href="/css/attendance.css" />
        <script type="text/javascript" src="/js/attendance.js"></script>
        <title>UCCA</title>
    </head>

    <body>
        <div class="container-fluid">
            <div>
                {{> navbar}}
            </div>
            <div class="content">
                {{> breadcrumbs navigation="<p class=\"fs-5\">Record Attendance</p>" date="INSERT DATE HERE"}}
                
                <div class="row mb-3">
                    <div class="col col-lg-6">
                        <label for="session" class="form-label">Search Name</label>
                        <input type="text" class="form-control" id="search_bar"/>
                    </div>
                </div>
                

                <div class="row mb-3">
                    <div class="col col-lg-6">
                        <label for="session" class="form-label">Session</label>
                        <select name="session" class="form-select" id="session">
                            <option selected value = "SelectSession">Select Session</option>
                            <option value="FirstService">First Service</option>
                            <option value="SecondService">Second Service</option>
                            <option value="LifeJourney">Life's Journey</option>
                        </select>
                    </div>
                </div>

                <div>
                    <div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <div class="d-flex align-items-center">Check</div>
                                    </th>
                                    <th scope="col">
                                        <div class="d-flex align-items-center">
                                            <div>Name</div>
                                            <div class="d-flex flex-column">
                                                <div id="sort-group">
                                                    <button
                                                        type="button"
                                                        id="sort-asc"
                                                        class="fa-button">
                                                        <i class="fa-solid fa-caret-up fa-2xs"></i>
                                                    </button>
                                                </div>
                                                <div>
                                                    <button
                                                        type="button"
                                                        id="sort-desc"
                                                        class="fa-button">
                                                        <i class="fa-sharp fa-solid fa-caret-down fa-2xs"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </th>
                                    <th scope="col" colspan="2">
                                        <div class="dropdown">
                                            <button
                                                class="dropdown-btn dropdown-toggle"
                                                type="button"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                                Category
                                            </button>
                                        </div>
                                    </th>
                                </tr>
                            </thead>

                            <div id="members">
                                {{#each data}}
                                    {{> members_attendance lastname=lastname firstname=firstname baptism=baptism phonenum=phonenum}}
                                {{/each}}
                            </div>
                        </table>
                    </div>

                    <button type="button" id="submit" class="btn mb-3">Record Attendance</button>
                </div>
            </div>

            {{> toast message="Attendance recorded! :D"}}
        </div>

        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
    </body>

</html>