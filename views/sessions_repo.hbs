<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Bootstrap CDN -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous"
        />
        <!-- Font Awesome CDN -->
        <script
            src="https://kit.fontawesome.com/eb29fe9d41.js"
            crossorigin="anonymous"
        ></script>

        <!-- jQuery CDN  -->
        <script
            src="https://code.jquery.com/jquery-3.6.1.js"
            integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
            crossorigin="anonymous"
        ></script>

        <!-- CSS -->
        <link rel="stylesheet" href="/css/style.css" />
        <link rel="stylesheet" href="/css/table.css" />

        <script type="text/javascript" src="/js/session.js"></script>
        <title>UCCA</title>
    </head>
    <body>
        <div class="container-fluid">
            {{> genReport }}
            {{> modal }}

            <div>
                {{!-- Navigation Bar --}}
                {{> navbar}}
            </div>

            <div class="content">
                {{> breadcrumbs navigation="<p class=\"fs-5\">Sessions</p>" date="INSERT DATE HERE"}}

                <div class="repository">
                    <div class="d-flex justify-content-end mb-3">
                        <form class="d-flex" id="search">
                            <input class="form-control me-2" type="search" placeholder="YYYY-MM-DD, Session" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </form>
                    </div>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th scope="col">
                                    <div class="d-flex align-items-center">
                                        <div>Date</div>
                                        <div class="d-flex flex-column">
                                            <div id="sort-group">
                                                <button
                                                    type="button"
                                                    id="sort-asc"
                                                    class="fa-button">
                                                    <i class="fa-solid fa-caret-up fa-2xs"></i>
                                                </button>
                                            </div>
                                            <div>
                                                <button
                                                    type="button"
                                                    id="sort-desc"
                                                    class="fa-button">
                                                    <i class="fa-sharp fa-solid fa-caret-down fa-2xs"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </th>
                                <th scope="col" colspan="2">
                                    <div class="dropdown">
                                        <button
                                            class="dropdown-btn dropdown-toggle"
                                            type="button"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Session Type
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><button class="dropdown-item dropdown-option session-type" id="all" type="button"><a href="/sessions">All</a></button></li>
                                            <li><button class="dropdown-item dropdown-option session-type" id="morning" type="button"><a href="?session=MorningSession">Morning Session</a></button></li>
                                            <li><button class="dropdown-item dropdown-option session-type" id="afternoon" type="button"><a href="?session=AfternoonSession">Afternoon Session</a></button></li>
                                            <li><button class="dropdown-item dropdown-option dropdown-option-last session-type" id="lifejourney" type="button"><a href="?session=LifeJourney">Life's Journey</a></button></li>
                                        </ul>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <div id="sessions">
                            {{#each data}}
								{{> sessionRepoTable date=date session=session}}
							{{/each}}
                        </div>
                    </table>

                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-dark mb-3" data-bs-toggle="modal" data-bs-target="#report_modal">Generate Report</button>
                    </div>
                </div>
            </div>

            {{> toastError message="Failed to delete session :(<br>Try again?"}}
        </div>

        <!-- JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
