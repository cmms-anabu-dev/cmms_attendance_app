<div class="modal fade" id="report_modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" id="mod_head">
                <h4 class="modal-title" id="mod_title">Generate Report Settings</h4>
                <button type="button" class="close exit" data-bs-dismiss="modal" id="exit_btn">&times;</button>
            </div>

            <div class="modal-body">
                <div class="mb-3">
                    <label style="font-weight: bold;">Choose Date Range:</label> <br>
                    <input type="date" id="start_date" /> to <input type="date" id="end_date" />
                </div>
                <div class="mb-3">
                    <label style="font-weight: bold;">Choose Sessions to Include:</label>
                    <div class="radio">
                        <label><input type="radio" name="opt_session" value="All" checked />All</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="opt_session" value="FirstService">First Service</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="opt_session" value="SecondService">Second Service</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="opt_session" value="LifeJourney">Life's Journey</label>
                    </div>
                </div>
                
            </div>
            
            <div class="modal-footer">
                <button type="button" class="genReport" id="generate-report">Generate Report</button>
            </div>
        </div>
    </div>
</div>